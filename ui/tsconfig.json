{
    "compilerOptions": {
      "target": "es6",
      "module": "esNext",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "sourceMap": true,
      "allowJs": true,
      "outDir": "app",
      "baseUrl": ".",
      "esModuleInterop": true,
      "types": [
        "babylonjs",
        "babylonjs-gui"
      ]
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }